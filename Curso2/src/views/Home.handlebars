{{#each productos}}
<div class=" producto">
    <p>{{this.title}}</p>
    <p>{{this.categories}}</p>
    <p>Precio ${{this.price}}</p>
    <p>Stock {{this.stock}}</p>
    <img src="{{this.images}}" style="width: 258px; height: 195px;">
    <button onclick="addProduct('{{this._id}}')" class="agregar-carrito">Agregar al carrito</button>
    </div>
    {{/each}}

    {{#if hasPrevPage}}
    <a href="/?page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}

    <h5>{{page}}</h5>

    {{#if hasNextPage}}
    <a href="/?page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}

    <style>
        * {
            background-color: grey;
        }

        .producto {
            border: 1px solid #ccc;
            /* Agrega un borde a cada producto */
            padding: 10px;
            margin: 10px;
            text-align: center;
        }
    </style>


